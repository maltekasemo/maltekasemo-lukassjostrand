class TramStops:

    def __init__(self, name, lines, lat, lon):
        self._lines = lines
        self._name = name
        self._position = (lat, lon)

    def add_line(self, line):
        self._lines.append(line)

    def get_lines(self):
        return self._lines

    def get_name(self):
        return self._name

    def get_position(self):
        return self._position

    def set_position(self, lat, lon):
        self._position = (lat, lon)


class TramLine():

    def __init__(self, num, stops):
        self._number = num
        self._stops = stops
        pass

    def get_number(self):
        return self._number

    def get_stops(self):
        return self._stops


class TramNetwork():
